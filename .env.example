# Application Configuration
APP_NAME=CNC ML Monitoring API
DEBUG=False
HOST=0.0.0.0
PORT=8000

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Database Configuration (Railway MySQL)
# Replace 'your_railway_password_here' with your actual Railway database password
DATABASE_URL=mysql+aiomysql://root:your_railway_password_here@gondola.proxy.rlwy.net:21632/railway
DB_HOST=gondola.proxy.rlwy.net
DB_PORT=21632
DB_USER=root
DB_PASSWORD=your_railway_password_here
DB_NAME=railway

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ML Model Configuration
ML_MODEL_STORAGE_PATH=./models
ML_FEATURE_CACHE_TTL=3600
ML_PREDICTION_BATCH_SIZE=100

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development Settings
SKIP_DB_INIT=False